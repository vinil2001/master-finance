<script>

    if ($("#VATPayer").is(":checked") == false) {
        $("#CodVATPayerBlock, #VATCertificateNumberBlock").hide();
    }

    $("#VATPayer").click(function () {
        if ($("#VATPayer").is(":checked")) {
            $("#CodVATPayerBlock, #VATCertificateNumberBlock").show();
        }
        else {
            result = confirm("При подтвержлении действия, данные из полей: Код плательщика НДС и Номер свидетельства плат. НДС сотрутся.");
            if (result == true) {
                $("#CodVATPayerBlock, #VATCertificateNumberBlock").hide();
                $("#CodVATPayer, #VATCertificateNumber").val(null);
            }
            else
                $("#VATPayer").prop('checked', true);
        }       
    })
</script>
